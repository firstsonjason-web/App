rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthed() { return request.auth != null; }
    function isOwner(userId) { return isAuthed() && request.auth.uid == userId; }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      // Allow authenticated reads so aggregated queries (stats, friends lookup) don't fail.
      // Write access remains owner-only.
      allow read: if isAuthed();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // Goals collection - users can manage their own goals
    match /goals/{goalId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthed() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Activities collection - users can read/write their own activities
    match /activities/{activityId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthed() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Communities collection - public read for all authenticated users
    match /communities/{communityId} {
      allow read: if isAuthed();
      allow create: if isAuthed() && request.auth.uid == request.resource.data.createdBy;
      allow update, delete: if isAuthed() && request.auth.uid == resource.data.createdBy;
    }

    // Posts collection - community posts with proper access control
    match /posts/{postId} {
       allow read: if isAuthed();
       allow create: if isAuthed() && request.auth.uid == request.resource.data.userId;
       // Owners full control; others can only touch likes/replies
       allow update: if isAuthed() && (
         request.auth.uid == resource.data.userId ||
         request.resource.data.diff(resource.data).changedKeys().subsetOf(['likes','replies'])
       );
       allow delete: if isOwner(resource.data.userId);
     }

    // Comments collection - users can manage their own comments
    match /comments/{commentId} {
      allow read: if isAuthed();
      allow create: if isAuthed() && request.auth.uid == request.resource.data.authorId;
      allow update, delete: if isOwner(resource.data.authorId);
    }

    match /notifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isAuthed() && request.auth.uid == request.resource.data.userId;
    }

    // Friends collection - users can manage their own friend relationships
    match /friends/{friendId} {
      allow read: if isAuthed() &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == resource.data.friendId);
      allow create: if isAuthed() &&
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if isOwner(resource.data.userId);
    }

    // FriendRequests collection - users can manage their own friend requests
    match /friendRequests/{requestId} {
      allow read: if isAuthed() &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == resource.data.friendId ||
         resource.data.status == 'accepted');
      allow create: if isAuthed() &&
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if isAuthed() &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == resource.data.friendId);
    }

    // Chats collection - users can access their own chats
    match /chats/{chatId} {
      allow read: if isAuthed() &&
        (chatId.matches(request.auth.uid + '_.*') || chatId.matches('.*_' + request.auth.uid));
      allow write: if false; // managed via messages subcollection
    }

    // Chat messages subcollection - users can send/receive messages in their chats
    match /chats/{chatId}/messages/{messageId} {
      allow read: if isAuthed() &&
        (chatId.matches(request.auth.uid + '_.*') || chatId.matches('.*_' + request.auth.uid));
      allow create: if isAuthed() &&
        request.auth.uid == request.resource.data.senderId &&
        (chatId.matches(request.auth.uid + '_.*') || chatId.matches('.*_' + request.auth.uid));
      allow update: if isOwner(resource.data.senderId);
      allow delete: if false;
    }

    // Rankings collection - public read for authenticated users
    match /rankings/{rankingId} {
      allow read: if isAuthed();
      allow write: if false;
    }
    match /users/{userId}/rankings/{rankingId} {
      allow read: if isAuthed();
      allow write: if false;
    }
    match /global_rankings/{period} {
      allow read: if isAuthed();
      allow write: if false;
    }

    match /admin/{document=**} { allow read, write: if false; }
    match /public/{document=**} { allow read: if true; allow write: if false; }
  }
}